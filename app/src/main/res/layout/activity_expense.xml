<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/myDrawer"
    android:layout_height="match_parent"
    tools:context="com.appracks.easy_wallet.expense.Expense">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize" >
            <Spinner
                android:id="@+id/spn_filter_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:text="Current week income"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:background="@drawable/summery_item_gradient_bac_normal"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="#d0d0d0"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="Date"
                        android:padding="3dp"
                        android:background="@drawable/statement_back"
                        android:layout_weight="3"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:text="Income Source"
                        android:background="@drawable/statement_back"
                        android:layout_weight="4"
                        android:padding="3dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:text="Amount"
                        android:background="@drawable/statement_back"
                        android:layout_weight="3"
                        android:padding="3dp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ListView
                    android:id="@+id/lv_in_statement"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="45dp"
                    android:layout_height="wrap_content">

                </ListView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:background="@drawable/summery_item_gradient_bac_normal"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Amount: "
                    android:textColor="#000"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_filter_balance"
                    android:layout_width="wrap_content"
                    android:text="123.00"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btn_add_statement"
                        android:layout_width="30dp"
                        android:background="@drawable/ico_add_statement"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="7dp"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Current Balance"
                    android:gravity="center"
                    android:textColor="#ececec"
                    android:singleLine="true"
                    android:textSize="24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_current_balance"
                    android:layout_width="match_parent"
                    android:text="123.00"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="36dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_summery"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/nav_list_selector">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_summary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Summery"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_income"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/nav_list_selector">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_income" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Income"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_expense"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@color/list_background_pressed">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_expense" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Expense"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_graph"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/nav_list_selector">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_graph" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Graph"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>