<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/myDrawer"
    android:layout_height="match_parent"
    tools:context="com.appracks.easy_wallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize" />
        <ScrollView
            android:layout_width="match_parent"
            android:background="#FFF"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/income_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#294f7f"
                        android:textColor="#FFF"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Income summery" />
                    <LinearLayout
                        android:id="@+id/ly_current_week_in"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/summery_item_selector"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Current week:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:textColor="#000"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="123.00" />
                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ico_arrow_next"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_current_month_in"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/summery_item_selector"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Current month:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:textColor="#000"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="123.00" />
                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ico_arrow_next"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_current_year_in"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/summery_item_selector"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:textColor="#000"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Current year:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:textColor="#000"
                            android:layout_weight="3"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="123.00" />
                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ico_arrow_next"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_total_in"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/summery_item_selector"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="2"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Total:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:gravity="right"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="123.00" />
                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ico_arrow_next"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/balance_layout"
                    android:layout_below="@+id/income_layout"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Balance: "
                        android:textSize="32dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="123.00"
                        android:textSize="32dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:id="@+id/btn_add_statement"
                        android:layout_width="40dp"
                        android:background="@drawable/ico_add_statement"
                        android:layout_height="40dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/balance_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#294f7f"
                        android:textColor="#FFF"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Expense summery" />
                    <LinearLayout
                        android:id="@+id/ly_current_week_ex"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/summery_item_selector"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Current week:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:textColor="#000"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="123.00" />
                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ico_arrow_next"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_current_month_ex"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/summery_item_selector"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Current month:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:textColor="#000"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="123.00" />
                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ico_arrow_next"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_current_year_ex"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/summery_item_selector"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:textColor="#000"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Current year:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:textColor="#000"
                            android:layout_weight="3"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="123.00" />
                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ico_arrow_next"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_total_ex"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/summery_item_selector"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="2"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Total:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="3"
                            android:gravity="right"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="123.00" />
                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ico_arrow_next"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="7dp"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Current Balance"
                    android:gravity="center"
                    android:textColor="#ececec"
                    android:singleLine="true"
                    android:textSize="24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_current_balance"
                    android:layout_width="match_parent"
                    android:text="123.00"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="36dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_summery"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@color/list_background_pressed">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ico_add_statement" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Summery"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_income"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/nav_list_selector">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ico_add_statement" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Income"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_expense"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/nav_list_selector">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ico_add_statement" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Expense"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_graph"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/nav_list_selector">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ico_add_statement" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Graph"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>