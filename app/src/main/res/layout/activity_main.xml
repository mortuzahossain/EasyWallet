<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/income_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#294f7f"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="INCOME OVERVIEW"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#167f64"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:text="CURRENT WEEK"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#FFF" />

                                <LinearLayout
                                    android:id="@+id/ly_current_week_in"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:background="@drawable/summary_cat_selector"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_currency_1"
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="3dp"
                                        android:src="@drawable/dollar_sign" />

                                    <TextView
                                        android:id="@+id/tv_in_current_week"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="456.00"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="#FFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#167f64"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:text="CURRENT MONTH"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#FFF" />

                                <LinearLayout
                                    android:id="@+id/ly_current_month_in"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:background="@drawable/summary_cat_selector"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_currency_2"
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="3dp"
                                        android:src="@drawable/dollar_sign" />

                                    <TextView
                                        android:id="@+id/tv_in_current_month"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="456.00"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="#FFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#167f64"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:text="CURRENT YEAR"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#FFF" />

                                <LinearLayout
                                    android:id="@+id/ly_current_year_in"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:background="@drawable/summary_cat_selector"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_currency_3"
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="3dp"
                                        android:src="@drawable/dollar_sign" />

                                    <TextView
                                        android:id="@+id/tv_in_current_year"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="456.00"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="#FFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#167f64"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:text="TOTAL"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#FFF" />

                                <LinearLayout
                                    android:id="@+id/ly_total_in"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:background="@drawable/summary_cat_selector"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_currency_4"
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="3dp"
                                        android:src="@drawable/dollar_sign" />

                                    <TextView
                                        android:id="@+id/tv_in_total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="456.00"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="#FFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/balance_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/income_layout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#FF3300"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="Expense"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#FFF" />

                        <LinearLayout
                            android:id="@+id/add_ex_statement"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:background="@drawable/add_ex_selector"
                            android:onClick="add_ex_statement"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/btn_add_ex_statement"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/ico_add_statement" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="match_parent"
                        android:background="#5095CE"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#4a6b9e"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="BALANCE"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFF" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_currency_5"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="3dp"
                                android:src="@drawable/dollar_sign" />

                            <TextView
                                android:id="@+id/tv_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="456.00"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#FFF"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#018A00"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="Income"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#FFF" />

                        <LinearLayout
                            android:id="@+id/add_in_statement"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:background="@drawable/add_in_selector"
                            android:onClick="add_in_statement"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/btn_add_in_statement"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/ico_add_statement" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_expense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/balance_layout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#294f7f"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="EXPENSE OVERVIEW"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#167f64"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:text="CURRENT WEEK"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#FFF" />

                                <LinearLayout
                                    android:id="@+id/ly_current_week_ex"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:background="@drawable/summary_cat_selector"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_currency_6"
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="3dp"
                                        android:src="@drawable/dollar_sign" />

                                    <TextView
                                        android:id="@+id/tv_ex_current_week"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="456.00"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="#FFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#167f64"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:text="CURRENT MONTH"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#FFF" />

                                <LinearLayout
                                    android:id="@+id/ly_current_month_ex"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:background="@drawable/summary_cat_selector"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_currency_7"
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="3dp"
                                        android:src="@drawable/dollar_sign" />

                                    <TextView
                                        android:id="@+id/tv_ex_current_month"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="456.00"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="#FFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#167f64"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:text="CURRENT YEAR"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#FFF" />

                                <LinearLayout
                                    android:id="@+id/ly_current_year_ex"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:background="@drawable/summary_cat_selector"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_currency_8"
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="3dp"
                                        android:src="@drawable/dollar_sign" />

                                    <TextView
                                        android:id="@+id/tv_ex_current_year"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="456.00"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="#FFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#167f64"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:text="TOTAL"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#FFF" />

                                <LinearLayout
                                    android:id="@+id/ly_total_ex"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:background="@drawable/summary_cat_selector"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_currency_9"
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="3dp"
                                        android:src="@drawable/dollar_sign" />

                                    <TextView
                                        android:id="@+id/tv_ex_total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="456.00"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="#FFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/lay_expense"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="YOUR CURRENT STATUS"
                        android:gravity="center"
                        android:textColor="#FFF"
                        android:padding="7dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_current_status"
                        android:layout_width="match_parent"
                        android:text="GOOD"
                        android:gravity="center"
                        android:textColor="#FFF"
                        android:padding="7dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Current Balance"
                    android:textColor="#ececec"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_current_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="123.00"
                    android:textColor="#fff"
                    android:textSize="36dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_summery"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/list_background_pressed"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_summary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:text="Overview"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_income"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/nav_list_selector"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_income" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:text="Income"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_expense"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/nav_list_selector"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_expense" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:text="Expense"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/list_item_title" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_graph"
                android:layout_width="match_parent"
