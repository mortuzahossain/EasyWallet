<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#efefef"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/income_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="#FFF"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="#294f7f"
                    android:textColor="#FFF"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Income summery" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/summery_item_bac"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Current week:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="3"
                        android:textColor="#000"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="123.00" />
                    <ImageButton
                        android:layout_width="20dp"
                        android:background="@drawable/ico_arrow_next"
                        android:layout_marginTop="2dp"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/summery_item_bac"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Current month:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="3"
                        android:textColor="#000"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="123.00" />
                    <ImageButton
                        android:layout_width="20dp"
                        android:background="@drawable/ico_arrow_next"
                        android:layout_marginTop="2dp"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/summery_item_bac"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Current year:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="123.00" />
                    <ImageButton
                        android:layout_width="20dp"
                        android:background="@drawable/ico_arrow_next"
                        android:layout_marginTop="2dp"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/summery_item_bac"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="2"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Total:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="123.00" />
                    <ImageButton
                        android:layout_width="20dp"
                        android:background="@drawable/ico_arrow_next"
                        android:layout_marginTop="2dp"
                        android:layout_height="25dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_below="@+id/income_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="#FFF"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="#294f7f"
                    android:textColor="#FFF"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Expense summery" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/summery_item_bac"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Current week:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="3"
                        android:textColor="#000"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="123.00" />
                    <ImageButton
                        android:layout_width="20dp"
                        android:background="@drawable/ico_arrow_next"
                        android:layout_marginTop="2dp"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/summery_item_bac"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Current month:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="3"
                        android:textColor="#000"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="123.00" />
                    <ImageButton
                        android:layout_width="20dp"
                        android:background="@drawable/ico_arrow_next"
                        android:layout_marginTop="2dp"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/summery_item_bac"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Current year:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="123.00" />
                    <ImageButton
                        android:layout_width="20dp"
                        android:background="@drawable/ico_arrow_next"
                        android:layout_marginTop="2dp"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/summery_item_bac"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="2"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Total:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="123.00" />
                    <ImageButton
                        android:layout_width="20dp"
                        android:background="@drawable/ico_arrow_next"
                        android:layout_marginTop="2dp"
                        android:layout_height="25dp" />
                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:layout_width="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ico_add_statement"
                android:layout_marginRight="5dp"
                android:layout_height="40dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
